{
    "compilerOptions": {
        "outDir": "lib",
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "paths": {
            "@alto/executor": ["./src/executor"],
            "@alto/types": ["./src/types"],
            "@alto/utils": ["./src/utils"],
            "@alto/mempool": ["./src/mempool"],
            "@alto/rpc": ["./src/rpc"],
        }
    },
    "ts-node": {
        "swc": true
    },
    "include": ["./src/**/*"],
    "exclude": [
        "**/*.test.ts",
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
    }
}
